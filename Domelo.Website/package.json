{
  "name": "domelo-website",
  "version": "0.1.0",
  "private": true,
  "author": "Jack Domleo",
  "description": "Documentation website for the Domelo design system",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint && npm run stylelint:fix",
    "stylelint": "stylelint \"**/*.(scss|vue)\"",
    "stylelint:fix": "stylelint \"**/*.(scss|vue)\" --fix",
    "test:unit": "vue-cli-service test:unit"
  },
  "dependencies": {
    "copy-to-clipboard": "^3.2.1",
    "core-js": "^3.6.4",
    "register-service-worker": "^1.6.2",
    "vue": "^2.6.11",
    "vue-class-component": "^7.2.2",
    "vue-property-decorator": "^8.3.0",
    "vue-router": "^3.1.5"
  },
  "devDependencies": {
    "@types/jest": "^25.1.0",
    "@vue/cli-plugin-babel": "^4.1.2",
    "@vue/cli-plugin-pwa": "^4.1.2",
    "@vue/cli-plugin-typescript": "^4.1.2",
    "@vue/cli-plugin-unit-jest": "^4.1.2",
    "@vue/cli-service": "^4.1.2",
    "@vue/test-utils": "1.0.0-beta.29",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.3",
    "node-sass": "^4.13.1",
    "sass-loader": "^8.0.2",
    "stylelint": "^13.1.0",
    "stylelint-order": "^4.0.0",
    "stylelint-scss": "^3.14.2",
    "typescript": "~3.7.5",
    "vue-template-compiler": "^2.6.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,vue,ts}": [
      "vue-cli-service lint --cache",
      "npm run stylelint:fix",
      "git add"
    ]
  }
}

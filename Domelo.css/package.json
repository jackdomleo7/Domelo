{
  "name": "domelo-styles",
  "version": "1.0.0",
  "description": "Styles for the Domelo design system",
  "scripts": {
    "update-packages": "npm i",
    "stylelint": "stylelint \"**/*.scss\"",
    "stylelint:fix": "stylelint \"**/*.scss\" --fix",
    "design-tokens": "style-dictionary clean --config ./styledictionary.config.json && style-dictionary build --config ./styledictionary.config.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JDomleo/Domelo.git"
  },
  "author": "Jack Domleo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JDomleo/Domelo/issues"
  },
  "homepage": "https://github.com/JDomleo/Domelo#readme",
  "devDependencies": {
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.1",
    "gulp-css-purge": "^3.0.9",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.0.2",
    "gulp-sourcemaps": "^2.6.5",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "sass": "^1.26.3",
    "style-dictionary": "^2.8.3",
    "stylelint": "^13.2.1",
    "stylelint-order": "^4.0.0",
    "stylelint-scss": "^3.15.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{scss}": [
      "npm run stylelint:fix"
    ]
  }
}

{
  "source": ["properties/**/*.json"],
  "platforms": {
    "json": {
      "transformGroup": "js",
      "buildPath": "./",
      "files": [{
        "destination": "design-tokens.json",
        "format": "json/flat"
      }]
    },
    "css": {
      "transformGroup": "css",
      "buildPath": "scss/",
      "files": [
        {
          "format": "css/variables",
          "destination": "_design-tokens.scss"
        }
      ]
    }
  }
}
